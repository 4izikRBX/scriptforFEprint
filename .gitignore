-- Скрипт на клиенте
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local remoteEvent = ReplicatedStorage:WaitForChild("MyRemoteEvent")
local remoteFunction = ReplicatedStorage:WaitForChild("MyRemoteFunction")

-- Вызов RemoteEvent (отправка события на сервер)
remoteEvent:FireServer()

-- Вызов RemoteFunction (получение ответа от сервера)
local response = remoteFunction:InvokeServer()
print(response)  -- Ожидаем "Ответ от сервера: все работает!"
